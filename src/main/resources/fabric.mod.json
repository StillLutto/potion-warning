{
  "schemaVersion": 1,
  "id": "potion-warning",
  "version": "${version}",
  "name": "potion-warning",
  "description": "This mod warns you if a certain potion effect has run out.",
  "authors": [
    "StillLutto"
  ],
  "contact": {
    "website": "https://github.com/StillLutto/",
    "repo": "https://github.com/StillLutto/potion-warning",
    "homepage": "https://github.com/StillLutto/",
    "sources": "https://github.com/StillLutto/",
    "issues": "https://github.com/StillLutto/issues"
  },
  "license": "MIT",
  "icon": "assets/potion-warning/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "me.lutto.client.PotionWarningClient"
    ],
    "main": [
      "me.lutto.PotionWarning"
    ],
    "modmenu": [
      "me.lutto.modmenu.ModMenuIntegration"
    ]
  },

  "mixins": [
    "potion-warning.mixins.json"
    ],

  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  },
  "suggests": {
    "modmenu": ">=7.0.1"
  },
  "custom": {
    "modmenu": {
      "id": "potion-warning",
      "name": "Potion Warning",
      "description": "This mod warns you if a certain potion effect has run out.",
      "icon": "assets/potion-warning/icon.png",
      "update_checker": true
    }
  }
}
